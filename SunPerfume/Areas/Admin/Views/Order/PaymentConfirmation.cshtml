@model int

<div class="container pt-4" style="margin-top:150px;">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Your Order Number is : @Model  <br /><br />
    </div>
    <div>
        <img src="~/images/order_confirmation.png" width="30%" style="display: block; margin-left: auto; margin-right: auto;" />

    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Payment has been applied successfully! <br />
        <a asp-area="Customer" asp-controller="Order" asp-action="Details" asp-route-orderId="Model" class="btn btn-primary">Back to Order Details</a>

    </div>
</div>

